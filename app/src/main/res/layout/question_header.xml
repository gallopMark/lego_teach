<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_click_selector"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size_16"
        android:layout_marginRight="@dimen/margin_size_16"
        android:layout_marginTop="@dimen/margin_size_12"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivIco"
            android:layout_width="@dimen/margin_size_35"
            android:layout_height="@dimen/margin_size_35"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_size_12"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center|left"
            android:maxLines="1"
            android:textColor="@color/defaultColor"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/tvCollection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/margin_size_6"
            android:textColor="@color/defaultColor"
            android:textSize="@dimen/font_size_16"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivCollection"
            android:layout_width="@dimen/margin_size_24"
            android:layout_height="@dimen/margin_size_24"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/margin_size_6"
            android:padding="@dimen/margin_size_4"
            android:src="@drawable/workshop_collect_default"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_size_12"
        android:layout_marginLeft="@dimen/margin_size_16"
        android:layout_marginRight="@dimen/margin_size_16"
        android:layout_marginTop="@dimen/margin_size_6"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_4"
                android:background="@drawable/wenda_question" />

            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_6"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/margin_size_2"
                android:maxLines="3"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/spaceColor"
        android:padding="@dimen/margin_size_12"
        android:text="答案列表"
        android:textSize="@dimen/font_size_16" />

    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_size_16"
        android:text="暂时没有人提交答案，你可以点击下面的按钮提交你的答案！"
        android:textColor="@color/blow_gray"
        android:textSize="@dimen/font_size_16"
        android:visibility="gone" />
</LinearLayout>
