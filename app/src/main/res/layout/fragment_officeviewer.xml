<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />

    <FrameLayout
        android:id="@+id/fl_failure"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_size_16"
            android:layout_marginRight="@dimen/margin_size_16"
            android:drawablePadding="@dimen/margin_size_20"
            android:drawableTop="@drawable/load_failure"
            android:gravity="center"
            android:text="网页加载失败，点击空白刷新！"
            android:textColor="@color/blow_gray"
            android:textSize="@dimen/font_size_16" />
    </FrameLayout>
</FrameLayout>