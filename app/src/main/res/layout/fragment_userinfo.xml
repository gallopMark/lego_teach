<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/spaceColor"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_userIco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_16"
            android:background="@drawable/item_click_selector"
            android:orientation="horizontal"
            android:padding="@dimen/margin_size_12">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="头像"
                android:textSize="@dimen/font_size_17" />

            <ImageView
                android:id="@+id/userIco"
                android:layout_width="@dimen/margin_size_50"
                android:layout_height="@dimen/margin_size_50"
                android:layout_marginRight="@dimen/margin_size_12"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/go_into" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_1"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/margin_size_12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="姓名"
                android:textSize="@dimen/font_size_17" />

            <TextView
                android:id="@+id/tv_userName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_size_12"
                android:layout_marginRight="@dimen/margin_size_12"
                android:layout_weight="1"
                android:gravity="right|center"
                android:textColor="@color/faq_title"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_1"
            android:background="@color/white"
            android:padding="@dimen/margin_size_12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="所在区域"
                android:textSize="@dimen/font_size_17" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_size_12"
                android:layout_marginRight="@dimen/margin_size_12"
                android:layout_weight="1"
                android:gravity="right|center"
                android:textColor="@color/faq_title"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_1"
            android:background="@color/white"
            android:padding="@dimen/margin_size_12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="所在单位"
                android:textSize="@dimen/font_size_17" />

            <TextView
                android:id="@+id/tv_unit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_size_12"
                android:layout_marginRight="@dimen/margin_size_12"
                android:layout_weight="1"
                android:gravity="right|center"
                android:textColor="@color/faq_title"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_1"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/margin_size_12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="学段学科"
                android:textSize="@dimen/font_size_17" />

            <TextView
                android:id="@+id/tv_subject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_size_12"
                android:layout_marginRight="@dimen/margin_size_12"
                android:layout_weight="1"
                android:gravity="right|center"
                android:textColor="@color/faq_title"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_16"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/margin_size_12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="邮箱"
                android:textSize="@dimen/font_size_17" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_size_12"
                android:layout_marginRight="@dimen/margin_size_12"
                android:layout_weight="1"
                android:gravity="right|center"
                android:textColor="@color/faq_title"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_1"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/margin_size_12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="手机"
                android:textSize="@dimen/font_size_17" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_size_12"
                android:layout_marginRight="@dimen/margin_size_12"
                android:layout_weight="1"
                android:gravity="right|center"
                android:textColor="@color/faq_title"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>