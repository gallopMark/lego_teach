<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/margin_size_40"
        android:layout_height="@dimen/margin_size_40"
        android:layout_margin="@dimen/margin_size_8"
        android:src="@drawable/lego_ico" />

    <ProgressBar
        android:id="@+id/pb_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_6"
        android:layout_below="@+id/tv_name"
        android:layout_margin="@dimen/margin_size_5"
        android:layout_marginLeft="@dimen/margin_size_5"
        android:layout_marginRight="@dimen/margin_size_5"
        android:layout_toLeftOf="@+id/tv_percent"
        android:layout_toRightOf="@+id/iv_icon"
        android:progressDrawable="@drawable/mn_player_progress_diy"
        android:thumb="@drawable/mn_player_thumb" />

    <TextView
        android:id="@+id/tv_retry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="@dimen/margin_size_5"
        android:layout_marginRight="@dimen/margin_size_5"
        android:layout_toLeftOf="@+id/tv_percent"
        android:layout_toRightOf="@+id/iv_icon"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:text="下载失败"
        android:textColor="@color/red"
        android:textSize="@dimen/font_size_16"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_ico"
        android:gravity="center_horizontal"
        android:padding="@dimen/margin_size_3"
        android:text=""
        android:textColor="@color/defaultColor"
        android:textSize="@dimen/font_size_16" />


    <TextView
        android:id="@+id/tv_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pb_progress"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_size_15"
        android:padding="@dimen/margin_size_8"

        android:text="0%"
        android:textColor="@color/defaultColor"
        android:textSize="@dimen/font_size_16" />

</RelativeLayout>