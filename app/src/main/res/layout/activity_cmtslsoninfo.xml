<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.haoyu.app.view.AppToolBar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:right_button_image="@drawable/teaching_research_dot"
        app:show_right_button="false"
        app:title_text="@string/gen_class_detail" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/layout_load" />

        <com.haoyu.app.view.StickyScrollView
            android:id="@+id/ssv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomView"
            android:background="@color/spaceColor"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:visibility="gone"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_size_12"
                        android:layout_marginRight="@dimen/margin_size_12"
                        android:layout_marginTop="@dimen/margin_size_12">

                        <com.haoyu.app.view.RoundRectProgressBar
                            android:id="@+id/mRrogressBar"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_size_10"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            app:progress_background_color="@color/spaceColor"
                            app:progress_color="@color/defaultColor" />

                        <TextView
                            android:id="@+id/tv_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center"
                            android:layout_marginRight="@dimen/margin_size_16"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/font_size_9" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_size_12"
                        android:layout_marginRight="@dimen/margin_size_12"
                        android:layout_marginTop="@dimen/margin_size_12"
                        android:textSize="@dimen/font_size_17" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_size_12"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_userIco"
                            android:layout_width="@dimen/margin_size_25"
                            android:layout_height="@dimen/margin_size_25"
                            android:layout_gravity="center"
                            android:src="@drawable/user_default" />

                        <TextView
                            android:id="@+id/tv_userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_size_6"
                            android:ellipsize="end"
                            android:maxLength="8"
                            android:textColor="@color/defaultColor"
                            android:textSize="@dimen/font_size_14" />

                        <TextView
                            android:id="@+id/tv_createTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_size_6"
                            android:textColor="@color/blow_gray"
                            android:textSize="@dimen/font_size_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_size_12"
                        android:layout_marginLeft="@dimen/margin_size_12"
                        android:layout_marginRight="@dimen/margin_size_12"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_heatNum"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/teaching_red_corner"
                            android:drawablePadding="@dimen/margin_size_4"
                            android:drawableTop="@drawable/teaching_research_redu"
                            android:gravity="center"
                            android:paddingBottom="@dimen/margin_size_8"
                            android:paddingTop="@dimen/margin_size_8"
                            android:textColor="@color/red"
                            android:textSize="@dimen/font_size_10" />

                        <TextView
                            android:id="@+id/tv_supportNum"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_size_16"
                            android:layout_weight="1"
                            android:background="@drawable/teaching_blue_corner"
                            android:drawablePadding="@dimen/margin_size_4"
                            android:drawableTop="@drawable/teaching_research_dianzan"
                            android:gravity="center"
                            android:paddingBottom="@dimen/margin_size_8"
                            android:paddingTop="@dimen/margin_size_8"
                            android:textColor="#83B3FA"
                            android:textSize="@dimen/font_size_10" />

                        <TextView
                            android:id="@+id/tv_adviseNum"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_size_16"
                            android:layout_weight="1"
                            android:background="@drawable/teaching_green_corner"
                            android:drawablePadding="@dimen/margin_size_6"
                            android:drawableTop="@drawable/teaching_research_jianyi"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:paddingBottom="@dimen/margin_size_8"
                            android:paddingTop="@dimen/margin_size_8"
                            android:textColor="@color/defaultColor"
                            android:textSize="@dimen/font_size_10" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_introduce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_6"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/tag_introduce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_size_1"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_size_12"
                        android:tag="sticky-nonconstant-hastransparancy">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:drawableLeft="@drawable/biaotiyuan"
                            android:drawablePadding="@dimen/margin_size_6"
                            android:tag="sticky-nonconstant-hastransparancy"
                            android:text="@string/gen_class_introduce"
                            android:textSize="@dimen/font_size_16" />

                        <ImageView
                            android:id="@+id/iv_introduce"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/course_dictionary_shouqi" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_introduce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/margin_size_12"
                        android:paddingRight="@dimen/margin_size_12"
                        android:paddingTop="@dimen/margin_size_12"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_6"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/tag_frame"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_size_1"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_size_12"
                        android:tag="sticky-nonconstant-hastransparancy">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:drawableLeft="@drawable/biaotiyuan"
                            android:drawablePadding="@dimen/margin_size_6"
                            android:tag="sticky-nonconstant-hastransparancy"
                            android:text="@string/gen_class_frame_design"
                            android:textSize="@dimen/font_size_16" />

                        <ImageView
                            android:id="@+id/iv_frame"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/course_dictionary_xiala" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_frame"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/margin_size_12"
                        android:paddingRight="@dimen/margin_size_12"
                        android:paddingTop="@dimen/margin_size_12"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_6"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/tag_activity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_size_1"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_size_12"
                        android:tag="sticky-nonconstant-hastransparancy">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:drawableLeft="@drawable/biaotiyuan"
                            android:drawablePadding="@dimen/margin_size_6"
                            android:text="@string/gen_class_activity_design"
                            android:textSize="@dimen/font_size_16" />

                        <ImageView
                            android:id="@+id/iv_activity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/course_dictionary_xiala" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_activity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/margin_size_12"
                        android:paddingRight="@dimen/margin_size_12"
                        android:paddingTop="@dimen/margin_size_12"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_size_1"
                    android:layout_marginTop="@dimen/margin_size_6"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:tag="sticky-nonconstant-hastransparancy">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/biaotiyuan"
                            android:drawablePadding="@dimen/margin_size_6"
                            android:gravity="left|center"
                            android:padding="@dimen/margin_size_12"
                            android:text="@string/gen_class_course_resource"
                            android:textSize="@dimen/font_size_16" />

                        <TextView
                            android:id="@+id/tv_checkAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/margin_size_12"
                            android:background="@drawable/app_button_selector"
                            android:gravity="center"
                            android:paddingBottom="@dimen/margin_size_6"
                            android:paddingLeft="@dimen/margin_size_12"
                            android:paddingRight="@dimen/margin_size_12"
                            android:paddingTop="@dimen/margin_size_6"
                            android:text="查看全部>>"
                            android:textColor="@color/white"
                            android:visibility="gone" />

                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:descendantFocusability="blocksDescendants">

                    <com.haoyu.app.view.LoadingView
                        android:id="@+id/loadingFile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/margin_size_30"
                        android:visibility="gone" />

                    <com.haoyu.app.view.LoadFailView
                        android:id="@+id/loadfileError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/margin_size_16"
                        android:visibility="gone" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_file"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/empty_resources"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_size_16"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="@dimen/margin_size_80"
                            android:layout_height="@dimen/margin_size_80"
                            android:layout_gravity="center"
                            android:src="@drawable/empty_resources" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/margin_size_10"
                            android:gravity="center"
                            android:text="@string/gen_class_empty_resource"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/font_size_16" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_6"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:tag="sticky-nonconstant-hastransparancy">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_size_12">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawableLeft="@drawable/biaotiyuan"
                            android:drawablePadding="@dimen/margin_size_6"
                            android:text="@string/gen_class_teach_advise"
                            android:textSize="@dimen/font_size_16" />

                        <TextView
                            android:id="@+id/tv_adviseCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_size_8"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/font_size_14" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/spaceColor" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:descendantFocusability="blocksDescendants">

                    <com.haoyu.app.view.LoadFailView
                        android:id="@+id/errorAdvise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/margin_size_30"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_emptyAdvise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/margin_size_30"
                        android:drawablePadding="@dimen/margin_size_12"
                        android:drawableTop="@drawable/empty_list"
                        android:gravity="center"
                        android:text="目前还没人提建议，\n赶紧去发表您的建议吧！"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/font_size_16"
                        android:visibility="gone" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_advise"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_more_reply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_size_10"
                    android:layout_marginTop="@dimen/margin_size_10"
                    android:background="@color/spaceColor"
                    android:gravity="center"
                    android:padding="@dimen/margin_size_12"
                    android:text="查看所有建议"
                    android:textColor="@color/defaultColor"
                    android:textSize="@dimen/font_size_16"
                    android:visibility="gone" />
            </LinearLayout>
        </com.haoyu.app.view.StickyScrollView>

        <TextView
            android:id="@+id/bottomView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/margin_size_10"
            android:background="@drawable/edit_border_gray"
            android:hint="提一些建议，帮助完善创课"
            android:padding="@dimen/margin_size_10"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>