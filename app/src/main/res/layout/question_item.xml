<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_click_selector"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_size_16"
    android:paddingRight="@dimen/margin_size_16"
    android:paddingTop="@dimen/margin_size_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivIco"
            android:layout_width="@dimen/margin_size_35"
            android:layout_height="@dimen/margin_size_35"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_size_12"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/defaultColor"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="right|center"
            android:textColor="@color/blow_gray"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_6"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_4"
                android:background="@drawable/wenda_question" />

            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_6"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/margin_size_2"
                android:maxLines="3"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_8"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_4"
                android:src="@drawable/wenda_answer" />

            <TextView
                android:id="@+id/tvAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_5"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="@color/blow_gray"
                android:textSize="@dimen/font_size_15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/margin_size_6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCollection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_size_6"
                android:textColor="@color/defaultColor"
                android:textSize="@dimen/font_size_16"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivCollection"
                android:layout_width="@dimen/margin_size_24"
                android:layout_height="@dimen/margin_size_24"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_size_6"
                android:visibility="gone"
                android:padding="@dimen/margin_size_4"
                android:src="@drawable/workshop_collect_default" />

            <View
                android:layout_width="@dimen/margin_size_1"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_size_4"
                android:layout_marginTop="@dimen/margin_size_4"
                android:background="@color/spaceColor" />

            <TextView
                android:id="@+id/tvCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_size_6"
                android:textColor="@color/defaultColor"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_8"
        android:background="@drawable/edit_border_gray"
        android:hint="我来回答"
        android:padding="@dimen/margin_size_8"
        android:textSize="@dimen/font_size_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1"
        android:layout_marginTop="@dimen/margin_size_10"
        android:background="@color/spaceColor" />
</LinearLayout>
