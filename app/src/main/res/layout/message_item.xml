<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_click_selector"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_size_12">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:background="@drawable/shape_message_system"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_size_4"
                android:paddingLeft="@dimen/margin_size_10"
                android:paddingRight="@dimen/margin_size_10"
                android:paddingTop="@dimen/margin_size_4"
                android:textColor="@color/defaultColor"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_weight="1"
                android:drawableLeft="@drawable/announcements_createdate"
                android:drawablePadding="@dimen/margin_size_5"
                android:gravity="right"
                android:textColor="@color/blow_gray"
                android:textSize="@dimen/font_size_15" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_10"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/margin_size_2"
            android:maxLines="3"
            android:textSize="@dimen/font_size_16" />

        <Button
            android:id="@+id/btReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="@dimen/margin_size_10"
            android:background="@null"
            android:drawableLeft="@drawable/discussion_dapinglun"
            android:drawablePadding="@dimen/margin_size_4"
            android:text="回复"
            android:textColor="@color/defaultColor"
            android:textSize="@dimen/font_size_16"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_6"
        android:background="@color/spaceColor" />
</LinearLayout>