<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/spaceColor">

    <com.haoyu.app.view.LoadingView
        android:id="@+id/loadingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <com.haoyu.app.view.LoadFailView
        android:id="@+id/loadFailView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/margin_size_12"
        android:drawableTop="@drawable/empty_list"
        android:gravity="center"
        android:text="无统计信息~"
        android:textColor="@color/blow_gray"
        android:textSize="@dimen/font_size_16"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_1"
            android:background="@color/spaceColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_size_8"
            android:paddingLeft="@dimen/margin_size_16"
            android:paddingRight="@dimen/margin_size_16"
            android:paddingTop="@dimen/margin_size_8">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_4"
                android:drawableLeft="@drawable/course_time"
                android:drawablePadding="@dimen/margin_size_4"
                android:textColor="@color/blow_gray"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tv_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_4"
                android:drawableLeft="@drawable/message_time"
                android:drawablePadding="@dimen/margin_size_4"
                android:textColor="@color/blow_gray"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_6"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_size_12"
            android:paddingTop="@dimen/margin_size_12">

            <TextView
                android:id="@+id/tv_questionNum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/margin_size_6"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_14" />

            <View
                android:layout_width="@dimen/margin_size_1"
                android:layout_height="match_parent"
                android:background="@color/spaceColor" />

            <TextView
                android:id="@+id/tv_answerNum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/margin_size_6"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_14" />

            <View
                android:layout_width="@dimen/margin_size_1"
                android:layout_height="match_parent"
                android:background="@color/spaceColor" />

            <TextView
                android:id="@+id/tv_noteNum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/margin_size_6"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_14" />

            <View
                android:layout_width="@dimen/margin_size_1"
                android:layout_height="match_parent"
                android:background="@color/spaceColor" />

            <TextView
                android:id="@+id/tv_resourcesNum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/margin_size_6"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_14" />

            <View
                android:layout_width="@dimen/margin_size_1"
                android:layout_height="match_parent"
                android:background="@color/spaceColor" />

            <TextView
                android:id="@+id/tv_discussNum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/margin_size_4"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_6"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_size_4"
            android:paddingTop="@dimen/margin_size_4">

            <RadioButton
                android:id="@+id/rb_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_20"
                android:layout_marginRight="@dimen/margin_size_20"
                android:layout_weight="1"
                android:background="@drawable/course_tab_selector"
                android:button="@color/transparent"
                android:checked="true"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_size_5"
                android:paddingTop="@dimen/margin_size_5"
                android:text="全部"
                android:textColor="@color/tab_textcolor_selector"
                android:textSize="@dimen/font_size_16" />

            <RadioButton
                android:id="@+id/rb_qualified"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_20"
                android:layout_marginRight="@dimen/margin_size_20"
                android:layout_weight="1"
                android:background="@drawable/course_tab_selector"
                android:button="@color/transparent"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_size_5"
                android:paddingTop="@dimen/margin_size_5"
                android:text="合格"
                android:textColor="@color/tab_textcolor_selector"
                android:textSize="@dimen/font_size_16" />

            <RadioButton
                android:id="@+id/rb_noqualified"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_20"
                android:layout_marginRight="@dimen/margin_size_20"
                android:layout_weight="1"
                android:background="@drawable/course_tab_selector"
                android:button="@color/transparent"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_size_5"
                android:paddingTop="@dimen/margin_size_5"
                android:text="不合格"
                android:textColor="@color/tab_textcolor_selector"
                android:textSize="@dimen/font_size_16" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_1"
            android:background="@color/seaShell"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_size_5"
            android:paddingTop="@dimen/margin_size_5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="姓名"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="作业"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="成绩"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="状态"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.haoyu.app.view.LoadFailView
                android:id="@+id/lfv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <com.haoyu.app.xrecyclerview.XRecyclerView
                android:id="@+id/xrv1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/margin_size_16"
                android:drawableTop="@drawable/empty_list"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_16"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <com.haoyu.app.view.LoadFailView
                android:id="@+id/lfv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <com.haoyu.app.xrecyclerview.XRecyclerView
                android:id="@+id/xrv2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/margin_size_16"
                android:drawableTop="@drawable/empty_list"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_16"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <com.haoyu.app.view.LoadFailView
                android:id="@+id/lfv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <com.haoyu.app.xrecyclerview.XRecyclerView
                android:id="@+id/xrv3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/margin_size_16"
                android:drawableTop="@drawable/empty_list"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_16"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>