<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:star="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_size_12"
    android:paddingRight="@dimen/margin_size_12"
    android:paddingTop="@dimen/margin_size_12">

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blow_gray"
        android:textSize="@dimen/font_size_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_12"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="得分："
            android:textSize="@dimen/font_size_16" />

        <com.haoyu.app.view.StarBar
            android:id="@+id/starBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_size_4"
            android:layout_marginRight="@dimen/margin_size_16"
            star:starDistance="@dimen/margin_size_10"
            star:starEmpty="@drawable/assignment_default_xing"
            star:starFill="@drawable/assignment_press_xing"
            star:starNumber="5"
            star:starSize="@dimen/margin_size_16" />

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/margin_size_6"
            android:minEms="3"
            android:drawableRight="@drawable/go_into"
            android:gravity="center"
            android:textColor="@color/orange"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1"
        android:layout_marginTop="@dimen/margin_size_12"
        android:background="@color/spaceColor" />
</LinearLayout>