<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.haoyu.app.view.AppToolBar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:right_button_image="@drawable/search"
            android:visibility="gone"
            app:show_right_button="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/toolbar_left_iv"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/app_back" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="输入姓名"
                android:maxLines="1"
                android:padding="@dimen/title_padding"
                android:paddingLeft="@dimen/margin_size_16"
                android:paddingRight="@dimen/margin_size_16"
                android:textSize="@dimen/font_size_16" />

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginRight="@dimen/margin_size_10"
                android:padding="@dimen/margin_size_6"
                android:scaleType="centerCrop"
                android:src="@drawable/member_search" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>