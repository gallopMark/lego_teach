<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_ico"
        android:layout_width="@dimen/margin_size_40"
        android:layout_height="@dimen/margin_size_40"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_size_12"
        android:layout_marginRight="@dimen/margin_size_6"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_size_4"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_14" />

        <ProgressBar
            android:id="@+id/downloadBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_4"
            android:layout_marginBottom="@dimen/margin_size_2"
            android:layout_marginTop="@dimen/margin_size_2"
            android:progressDrawable="@drawable/mn_player_progress_diy"
            android:thumb="@drawable/mn_player_thumb" />

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="@dimen/margin_size_26"
        android:layout_height="@dimen/margin_size_26"
        android:layout_marginLeft="@dimen/margin_size_6"
        android:layout_marginRight="@dimen/margin_size_12"
        android:padding="@dimen/margin_size_4"
        android:src="@drawable/download_cancel" />

</LinearLayout>